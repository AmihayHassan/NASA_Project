<UserControl x:Class="NASA_PL.UserControls.SidePanelButtonUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:NASA_PL.UserControls"
             xmlns:converters="clr-namespace:NASA_PL.Converters"

    mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <converters:StringToPackIconConverter x:Key="StringToPackIcon"/>
    </UserControl.Resources>


    <Button Style="{StaticResource SidePanelButton}">
        <StackPanel Orientation="Horizontal">
            <TextBlock  
                Text="{Binding TextBlockText}"
                       FontSize="30"
                       Foreground="White"
                       VerticalAlignment="Center"
                       Margin="{Binding TextBlockMargin}"/>
            <materialDesign:PackIcon
                Foreground="White"
                Height="50"
                Width="50"
                Margin="{Binding PackIconMargin}"
                Kind="{Binding Path=PackIconKind, Converter={StaticResource StringToPackIcon}}"
                />
        </StackPanel>
    </Button>







</UserControl>
